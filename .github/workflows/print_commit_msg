name: Print Commit Message
on:
  push:
    branches:
      - main
  pull_request:
    branches:
      - main

jobs:
  print_message:
    runs-on: ubuntu-latest

    steps:
      - name: check out code
        uses: actions/checkout@v4

      - name: Print Commit Message (push)
        if: github.event_name == 'push'
        run: |
          echo "ðŸ”¹diam Commit message from GitHub context:"
          echo "${{ github.event.head_commit.message }}"
          echo "ðŸ”¹ Commit message from git log:"
          git log -1 --pretty=%B

      - name: Print Commit Message (pull request)
        if: github.event_name == 'pull_request'
        run: |
          echo "ðŸ”¸ Latest commit in the pull request:"
          git fetch origin ${{ github.event.pull_request.head.ref }}
          git log origin/${{ github.event.pull_request.head.ref }} -1 --pretty=%B
